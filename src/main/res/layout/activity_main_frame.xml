<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="#060606"
        android:layout_height="match_parent"
        tools:context=".activities.MainFrame">
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:padding="20dp"
                  android:orientation="vertical"

    >
        <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="4"
                android:orientation="horizontal"
                android:layout_marginBottom="40dp"
                android:layout_height="wrap_content">
            <Button
                    android:layout_width="193dp"
                    android:layout_height="71dp"
                    android:layout_margin="5dp"
                    android:textSize="20sp"
                    android:layout_weight="3"

                    android:textColor="#ffffff"
                    android:text="Profile"
                    android:drawableLeft="@drawable/blank_pro_pic"
                    android:background="@drawable/save_button"

            />
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/ic_message_black_24dp"

            />

        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
                      android:weightSum="3"
                      android:layout_marginBottom="10dp"
                      android:layout_height="100dp">
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="10dp"
                    android:textAlignment="center"
                    android:textColor="#b075ea"

                    android:gravity="bottom"


                    android:background="@drawable/ic_people_24dp"

            />
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="bottom"
                    android:textSize="10dp"
                    android:textAlignment="center"
                    android:textColor="#b075ea"
                    android:background="@drawable/ic_rp_24dp"

            />
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="bottom"
                    android:textSize="10dp"
                    android:textAlignment="center"
                    android:textColor="#b075ea"
                    android:background="@drawable/ic_event_information_24dp"

            />
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
                      android:weightSum="3"
                      android:layout_marginBottom="10dp"
                      android:layout_height="100dp">
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:textSize="10dp"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:textColor="#b075ea"
                    android:gravity="bottom"
                    android:background="@drawable/ic_location_24dp"

            />
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:gravity="bottom"
                    android:textSize="10dp"
                    android:textAlignment="center"
                    android:textColor="#b075ea"
                    android:background="@drawable/ic_forum_24dp"

            />
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:textSize="10dp"
                    android:textAlignment="center"
                    android:gravity="bottom"
                    android:textColor="#b075ea"
                    android:background="@drawable/ic_gallery_24dp"

            />
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
                      android:weightSum="3"
                      android:layout_height="100dp">
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:textSize="10dp"
                    android:gravity="bottom"
                    android:textAlignment="center"
                    android:textColor="#b075ea"
                    android:background="@drawable/ic_files_24dp"

            />
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:textSize="10dp"
                    android:layout_weight="1"
                    android:gravity="bottom"
                    android:textAlignment="center"
                    android:textColor="#b075ea"
                    android:background="@drawable/ic_notification_24dp"

            />
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="bottom"
                    android:layout_margin="5dp"
                    android:textSize="10dp"
                    android:textAlignment="center"
                    android:textColor="#b075ea"
                    android:background="@drawable/ic_near_me_24dp"

            />
        </LinearLayout>
        <Button android:layout_width="match_parent"
                android:layout_marginTop="50dp"
                android:background="@drawable/edit_profile_button"
                android:textColor="#ffffff"
                android:text="Check In"
                android:id="@+id/btnCheckIn"
                android:layout_height="match_parent"/>

        <Button android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:background="@drawable/shape_button"
                android:textColor="#ffffff"
                android:text="Switch out"
                android:id="@+id/btnSwitchOut"
                android:layout_height="match_parent"/>


    </LinearLayout>

</ScrollView>