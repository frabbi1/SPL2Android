<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="#382A2A"
        android:layout_height="match_parent"
        tools:context=".activities.MainFrame">
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:padding="15dp"
                  android:orientation="vertical"

    >
        <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="4"
                android:orientation="horizontal"
                android:layout_marginBottom="30dp"
                android:layout_height="wrap_content">
            <Button
                    android:layout_width="193dp"
                    android:layout_height="71dp"
                    android:layout_margin="5dp"
                    android:textSize="20sp"
                    android:layout_weight="3"

                    android:textColor="#ffffff"
                    android:text="Profile"
                    android:drawableLeft="@drawable/blank_pro_pic"
                    android:background="@drawable/save_button"

            />
            <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/button_circle"
                    android:src="@drawable/chat"

            />

        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
                      android:weightSum="3"
                      android:layout_marginBottom="15dp"
                      android:orientation="horizontal"
                      android:layout_height="120dp">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="100dp"

                    android:textAlignment="center"
                    android:textColor="#b075ea"
                    android:src="@drawable/participant"
                    android:background="@drawable/button_circle"


            />
                <TextView android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:text="Participants"
                          android:textSize="15sp"
                          android:textAlignment="center"
                          android:textColor="#fff"

                />
            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:textAlignment="center"
                        android:textColor="#b075ea"
                        android:src="@drawable/rp"
                        android:background="@drawable/button_circle"

                />
                <TextView android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:text="RPs"
                          android:textSize="15sp"
                          android:textAlignment="center"
                          android:textColor="#fff"

                />
            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_margin="2dp"
                    android:layout_height="match_parent">
                <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:id="@+id/btnEvent"
                        android:textAlignment="center"
                        android:textColor="#b075ea"
                        android:src="@drawable/event"
                        android:background="@drawable/button_circle"

                />
                 <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="Event details"
                      android:textSize="15sp"
                      android:textAlignment="center"
                      android:textColor="#fff"

                 />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
                      android:weightSum="3"
                      android:layout_marginBottom="15dp"

                      android:layout_height="120dp">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_margin="2dp"
                    android:layout_height="match_parent">
                <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:textAlignment="center"
                        android:textColor="#b075ea"
                        android:src="@drawable/location"
                        android:background="@drawable/button_circle"

                />
                <TextView android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:text="Event location"
                          android:textSize="15sp"
                          android:textAlignment="center"
                          android:textColor="#fff"

                />
            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_margin="2dp"
                    android:layout_height="match_parent">
                <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:textAlignment="center"
                        android:textColor="#b075ea"
                        android:src="@drawable/gallery"
                        android:background="@drawable/button_circle"

                />
                <TextView android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:text="Photos"
                          android:textSize="15sp"
                          android:textAlignment="center"
                          android:textColor="#fff"

                />
            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_margin="2dp"
                    android:layout_height="match_parent">
                <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:textAlignment="center"
                        android:textColor="#b075ea"
                        android:src="@drawable/files"
                        android:background="@drawable/button_circle"

                />
                <TextView android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:text="Files"
                          android:textSize="15sp"
                          android:textAlignment="center"
                          android:textColor="#fff"

                />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
                      android:weightSum="3"
                      android:layout_margin="2dp"
                      android:layout_height="120dp">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:textAlignment="center"
                        android:textColor="#b075ea"
                        android:src="@drawable/forum"
                        android:background="@drawable/button_circle"

                />
                <TextView android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:text="Forum"
                          android:textSize="15sp"
                          android:textAlignment="center"
                          android:textColor="#fff"

                />
            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_margin="2dp"
                    android:layout_height="match_parent">
                <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:textAlignment="center"
                        android:textColor="#b075ea"
                        android:src="@drawable/notification"
                        android:background="@drawable/button_circle"

                />
                <TextView android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:text="Notification"
                          android:textSize="15sp"
                          android:textAlignment="center"
                          android:textColor="#fff"


                />
            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_margin="2dp"
                    android:layout_height="match_parent">
                <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:textAlignment="center"
                        android:textColor="#b075ea"
                        android:src="@drawable/nearme"
                        android:background="@drawable/button_circle"

                />
                <TextView android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:text="Near me"
                          android:textSize="15sp"
                          android:textAlignment="center"
                          android:textColor="#fff"

                />
            </LinearLayout>
        </LinearLayout>
        <Button android:layout_width="match_parent"
                android:layout_marginTop="40dp"
                android:background="@drawable/edit_profile_button"
                android:textColor="#ffffff"
                android:text="Check In"
                android:id="@+id/btnCheckIn"
                android:layout_height="match_parent"/>

        <Button android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:background="@drawable/shape_button"
                android:textColor="#ffffff"
                android:text="Switch out"
                android:id="@+id/btnSwitchOut"
                android:layout_height="match_parent"/>


    </LinearLayout>

</ScrollView>