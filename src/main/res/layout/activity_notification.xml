<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".class_activities.Notification">

    <LinearLayout android:layout_width="match_parent" android:layout_margin="2dp" android:layout_height="wrap_content">
        <TextView
                android:text="Shedule delayed by one hour"
                android:layout_width="match_parent"
                android:textColor="#000"
                android:textSize="35sp"
                android:padding="5dp"
                android:background="#C2B057"
                android:layout_height="113dp" android:id="@+id/tv" android:layout_weight="1"/>

    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView
                android:text="Feel free to get our service"
                android:layout_width="match_parent"
                android:textColor="#000"
                android:textSize="35sp"
                android:padding="5dp"
                android:background="#C2B057"
                android:layout_height="113dp" android:id="@+id/textView2" android:layout_weight="1"/>

    </LinearLayout>
</LinearLayout>